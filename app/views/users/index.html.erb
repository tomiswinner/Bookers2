<div class="row">
  <%= render(partial: 'layouts/sidebar',locals: {user: @user}) %>
    
  <div class="col-sm-8">
    <h2 class="mt-4 mb-2">Users</h2>
    
    <table class="table table-word-wrap">
      <thead>
        <th>image</th>
        <th>name</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user,:profile_image,:fill,30,30,fallback: "no_image.jpg") %></td>
            <td><%= user.name %></td>
            <td><%= link_to("Show",user_path(user.id)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>