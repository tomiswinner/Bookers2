<%= render(partial: 'layouts/sidebar',locals: {book: @book, user: @user}) %>
<h2>Books</h2>
<table>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% books = Book.where(user_id: @user.id) %>
    <% books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag(@user, :profile_image,:fill,15,15,fallback: "no_image.jpg") %></td>
        <td><%= link_to(book.title,book_path(book.id)) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>


</table>