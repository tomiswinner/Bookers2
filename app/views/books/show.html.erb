<%= render(partial: 'layouts/sidebar',locals: {user: @user}) %>
<h2>Book detail</h2>
<table>
  <tbody>
    <% user = User.find(@book.user_id) %>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill,30,30, fallback: "no_image.jpg") %></td>
      <td><%= user.name %></td>
      <td><%= link_to(@book.title,book_path(@book.id)) %></td>
      <td><%= @book.body %></td>
      <% if @book.user_id == current_user.id %>
        <td><%= link_to("Edit",edit_book_path(@book.id)) %></td>
        <td><%= link_to("Destroy","books#destroy{(@book.id}",method: :delete,data:{confirm: "本当に消しますか？"}) %></td>
      <% end %>
      </tr>
  </tbody>
</table>