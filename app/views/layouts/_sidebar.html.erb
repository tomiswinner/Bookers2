<h2>User info</h2>
<%= attachment_image_tag(current_user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg") %>
<table>
  <tbody>
    <tr>
      <td>name</td><td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>introduction</td><td><%= current_user.introduction %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= link_to("dummy",url: edit_user_registration_path) %>
</div>
<h2>New book</h2>
<div>
  <%= form_with(model: book,url: book(current_user.id)) do |f| %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
  <% end %>
</div>

