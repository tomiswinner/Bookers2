<h2>User info</h2>
<%= attachment_image_tag(user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg") %>
<table>
  <tbody>
    <tr>
      <td>name</td><td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td><td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<div>
  <% if not user == current_user %>
    <%= link_to("edit profile",user_path(current_user.id)) %>
  <% else %>
    <%= link_to("edit profile",edit_user_registration_path) %>
  <% end %>
</div>
<h2>New book</h2>
<% book = Book.new %>
<div>
  <%= form_with(model: book,url: "/books#create",local: true,method: :post) do |f| %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
</div>

