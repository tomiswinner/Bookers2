<!DOCTYPE html>
<html>
  <head>
    <title>Booker2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-xl bg-dark navbar-dark">
        <a class="navbar-brand" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler1" aria-controls="navbarToggler1">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler1">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="navbar-link text-white font-weight-bold " href="/">Home</a>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to("Users",users_path,class: "navbar-link text-white font-weight-bold ") %>
              </li>
              <li class="nav-item">
                <%= link_to("Books",books_path,class: "navbar-link text-white font-weight-bold ") %>
              </li>
              <li class="nav-item">
                <%= link_to("Log out",destroy_user_session_path,method: :delete,class: "navbar-link text-white font-weight-bold ") %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to("About",about_path,class: "navbar-link text-white font-weight-bold ") %>
              </li>
              <li class="nav-item">
                <%= link_to("Sign up",new_user_registration_path,class: "navbar-link text-white font-weight-bold ") %>
              </li>
              <li class="nav-item">
                <%= link_to("Log in ",new_user_session_path,class: "navbar-link text-white font-weight-bold ") %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <p>
        CopyRight Infratop.inc
      </p>
    </footer>
  </body>
</html>
